alias ez='gvim ~/.zshrc'
alias sz='source ~/.zshrc'
alias ea='gvim /home/${USER}/.alias'
alias sa='source /home/${USER}/.alias'
alias g='gvim'
alias ev='gvim ~/.vimrc'
alias et='gvim ~/.tmux.conf'
alias ei='gvim ~/.config/i3/config'

#-------------------------------------------------------------
# X
#-------------------------------------------------------------
alias logoff='/usr/bin/cinnamon-session-quit --no-prompt'

